<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>


        <!--  HEADER -->
        <record model="ir.actions.act_window" id="action_imports">
            <field name="name">Imports</field>
            <field name="res_model">epe.header</field>
            <field name="view_mode">tree,form</field>
            <!--field name="context">{"search_default_upcoming":1}</field-->
        </record>

        <menuitem
                action="action_imports"
                id="epe_menu_imports"
                parent="base.menu_product"
                sequence="40"/>


        <!-- header Tree view -->
        <record model="ir.ui.view" id="view_epe_header_tree">
            <field name="name">Imports</field>
            <field name="model">epe.header</field>
            <field name="arch" type="xml">
                <tree string="Imports">
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <!-- header Form view -->
        <record model="ir.ui.view" id="view_epe_header_form">
            <field name="name">Imports</field>
            <field name="model">epe.header</field>
            <field name="arch" type="xml">
                <form string="Imports">

                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group name="main_field_group1" col="4">
                             <field name="supplier_id"/>
                             <field name="date_import"/>
                        </group>
                        <group name="main_field_group2" col="4">
                            <field name="delimiter"/>
                            <field name="quotechar"/>
                            <field name="strip_fields"/>
                        </group>
                        <group name="main_field_group3" col="4">
                            <field name="update_name"/>
                            <field name="update_category"/>
                            <field name="update_ean"/>
                            <field name="update_saleprice"/>
                            <field name="update_purchaseprice"/>
                        </group>
                        <group name="main_field_group4">
                            <field name="datas" filename="datas_fname"/>
                            <field name="datas_fname" invisible="1"/>
                        </group>
                         <group name="main_field_group5" col="8">
                            <button name="import_file" string="Import filer" type="object" class="oe_highlight"/>
                            <button name="update" string="Update" type="object" class="oe_highlight"/>
                        </group>
                        <group name="main_field_group6">
                            <field name="description" nolabel="1" placeholder="Import Description..."/>
                        </group>
                        <group>
                            <field name="line_ids" nolabel="1">
                                <tree>
                                    <field name="default_code"/>
                                    <field name="name"/>
                                    <field name="category"/>
                                    <field name="ean13"/>
                                    <field name="pricelist_sale"/>
                                    <field name="pricelist_purchase"/>
                                    <field name="status"/>
                                    <field name="observations"/>
                                </tree>
                            </field>
                        </group>

                    </sheet>
                </form>
            </field>
        </record>


    </data>
</openerp>

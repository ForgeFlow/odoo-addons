<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="website_sale_categories_top_products" inherit_id="website_sale.products" priority="5" active="False"
                  customize_show="True" name="Product categories on top">
            <xpath expr="//div[@class='container oe_website_sale']//div[@class='products_pager']" position="before">
                <div class="row">
                    <div class="col-md-12">
                        <ul class="nav nav-tabs mt16">
                            <li t-att-class=" '' if category else 'active' ">
                                <a t-att-href="keep('/shop',category=0)" class="o_not_editable">All Products</a>
                            </li>
                            <t t-foreach="categories" t-as="c">
                                <t t-call="website_sale.categories_recursive"/>
                            </t>
                        </ul>
                    </div>
                </div>
            </xpath>
        </template>
    </data>
</openerp>



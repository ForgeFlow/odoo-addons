<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_website_sale_show_layout_product_form_view_id" model="ir.ui.view">
        <field name="name">website.sale.show.layout.product.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Web layout">
                    <group>
                        <field name="website_size_x"/>
                        <field name="website_size_y"/>
                        <field name="website_description" widget="text"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>

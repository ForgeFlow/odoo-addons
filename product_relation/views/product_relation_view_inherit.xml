<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="product_relation_normal_form_view">
            <field name="name">product.relation.normal.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <notebook position="inside">
                    <page string="Product relation">
                        <button string="Add" name="button_add" type="object" class="oe_edit_only"
                                icon="gtk-add" groups="base.group_user"/>
                        <button string="Remove" name="button_remove" type="object" class="oe_edit_only"
                                groups="base.group_user" icon="gtk-remove"/>
                        <field name="product_related_ids" readonly="0" options="{'reload_on_button': true}">
                            <tree editable="bottom" edit="1" delete="0" create="0">
                                <field name="product_id" readonly="1"/>
                                <field name="mark"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </field>
        </record>

    </data>
</openerp>

<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>


        <record id="view_order_form_inherit_product_relations" model="ir.ui.view">
            <field name="name">sale.order.form.product.relations</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@string='Order Lines']/field[@name='order_line']/form[@string='Sales Order Lines']/field[@name='name']"
                       position="after">
                    <div>
                        <label for="invoice_lines"/>
                        <field name="invoice_lines"/>
                    </div>
                </xpath>
            </field>
        </record>


    </data>
</openerp>

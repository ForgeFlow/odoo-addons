<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="product_relation_form">
            <field name="name">product.relation.form</field>
            <field name="model">product.relation</field>
            <field name="arch" type="xml">
                <form string="Product Relation">
                    <group>
                        <field name="product_id"
                               select="1"/>
                        <field name="is_active" select="1" />
                        <field name="related_product_id" select="1" />
                        <field name="type" select="1" />
                    </group>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="product_relation_tree">
            <field name="name">product.relation.tree</field>
            <field name="model">product.relation</field>
            <field name="arch" type="xml">
                <tree string="Product Relation">
                    <field name="product_id"/>
                    <field name="is_active" />
                    <field name="related_product_id" />
                    <field name="type" />
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="product_product_relation_form">
            <field name="name">product.normal.form.custom.relation</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <notebook position="inside">
                    <page string="Product Realtion">
                        <field name="product_relation_ids" colspan="4" nolabel="1">
                          <tree>
                                <field name="is_active"/>
                                <field name="related_product_id"/>
                                <field name="type"/>
                            </tree>
                          <form>
                            <group>
                                <field name="is_active"/>
                                <field name="related_product_id"/>
                                <field name="type"/>
                            </group>
                          </form>
                        </field>
                    </page>
                </notebook>
            </field>
        </record>

        <record id="product_relation_action" model="ir.actions.act_window">
            <field name="name">Product Relation</field>
            <field name="res_model">product.relation</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="product_relation_menu"
            parent="base.menu_product"
            action="product_relation_action"
            sequence="100"/>
    </data>
</openerp>

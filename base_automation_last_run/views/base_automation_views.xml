<odoo>
    <record id="view_base_automation_form" model="ir.ui.view">
        <field name="name">base.automation.form.inherit.last.run</field>
        <field name="model">base.automation</field>
        <field name="inherit_id" ref="base_automation.view_base_automation_form" />
        <field name="arch" type="xml">
            <xpath expr="//group[@name='action_wrapper']" position="inside">
                <group>
                    <field name="last_run" />
                </group>
            </xpath>
        </field>
    </record>
</odoo>

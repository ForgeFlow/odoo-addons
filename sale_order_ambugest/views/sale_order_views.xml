<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.ambugest.form</field>
        <field name="sequence" eval="10"/>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Service detail">
                    <group>
                        <group string="Patient data">
                            <field name="contract_number" attrs="{'readonly': [('state', 'in', ('done','cancel'))]}"/>
                            <field name="insured_name" attrs="{'readonly': [('state', 'in', ('done','cancel'))]}"/>
                            <field name="insured_ident_cardnum"
                                   attrs="{'readonly': [('state', 'in', ('done','cancel'))]}"/>
                            <field name="policy_number" attrs="{'readonly': [('state', 'in', ('done','cancel'))]}"/>
                            <field name="auth_number" attrs="{'readonly': [('state', 'in', ('done','cancel'))]}"/>
                        </group>
                        <group string="Service data">
                            <field name="plate_number" attrs="{'readonly': [('state', 'in', ('done','cancel'))]}"/>
                            <field name="service_number" attrs="{'readonly': [('state', 'in', ('done','cancel'))]}"/>
                            <field name="service_date" attrs="{'readonly': [('state', 'in', ('done','cancel'))]}"/>
                            <field name="origin" attrs="{'readonly': [('state', 'in', ('done','cancel'))]}"/>
                            <field name="destination" attrs="{'readonly': [('state', 'in', ('done','cancel'))]}"/>
                            <field name="service_direction"
                                   widget="radio" options="{'horizontal': true}"
                                   attrs="{'readonly': [('state', 'in', ('done','cancel'))]}"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>

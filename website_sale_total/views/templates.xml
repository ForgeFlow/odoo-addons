<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="total" active="True" customize_show="True" inherit_id="website_sale.total"
              priority="20" name="Custom total">
        <xpath expr="." position="replace">

            <t t-name="website_sale.total">
                <div id="cart_total" class="col-sm-5 col-sm-offset-7 col-xs-12 mb16" t-if="website_sale_order">
                    <div class="row" id="order_products_untaxed">
                        <span class="col-xs-7 text-left text-muted">Products:</span>
                        <span class="col-xs-5 text-right text-muted">
                            <span t-field="website_sale_order.nondelivery_products_amount" style="white-space: nowrap;" t-options="{'widget': 'monetary','from_currency': website_sale_order.pricelist_id.currency_id,'display_currency': website.currency_id}"/>
                        </span>
                    </div>
                    <div class="row" id="order_delivery" t-if="website_sale_order">
                        <span class="col-xs-6 text-left text-muted" title="Delivery will be updated after choosing a new delivery method"> Delivery:</span>
                        <span class="col-xs-6 text-right text-muted">
                            <span t-field="website_sale_order.amount_delivery" style="white-space: nowrap;" t-options="{'widget': 'monetary', 'display_currency': website_sale_order.currency_id}"/>
                        </span>
                    </div>
                    <hr style="margin-top:10px;margin-bottom:0;padding:0;"/>
                    <div class="row" id="order_total_untaxed">
                        <span class="col-xs-7 text-left h4">Untaxed amount:</span>
                        <span class="col-xs-5 text-right text-muted h4">
                            <span t-field="website_sale_order.amount_untaxed" style="white-space: nowrap;" t-options="{'widget': 'monetary','from_currency': website_sale_order.pricelist_id.currency_id,'display_currency': website.currency_id}"/>
                        </span>
                    </div>
                    <div class="row" id="order_total_taxes">
                        <span class="col-xs-7 text-left text-muted" title="Taxes may be updated after providing shipping address"> Taxes:</span>
                        <span class="col-xs-5 text-right text-muted">
                            <span t-field="website_sale_order.amount_tax" style="white-space: nowrap;" t-options="{'widget': 'monetary', 'from_currency': website_sale_order.pricelist_id.currency_id, 'display_currency': website.currency_id}"/>
                        </span>
                    </div>
                    <div class="row" id="order_total">
                        <span class="col-xs-6 text-left h3">Total:</span>
                        <span class="col-xs-6 text-right h3" style="white-space: nowrap;">
                            <span t-field="website_sale_order.amount_total" style="white-space: nowrap;" t-options="{'widget': 'monetary','from_currency': website_sale_order.pricelist_id.currency_id,'display_currency': website.currency_id}"/>
                        </span>
                    </div>
                </div>
            </t>


        </xpath>
    </template>

</odoo>

<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="external_layout_sargantana">
            <!-- Multicompany -->
            <t t-if="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id"></t>
            </t>
            <t t-if="not o or not 'company_id' in o">
                <t t-set="company" t-value="res_company"></t>
            </t>
            <t t-set="logoimage" t-value="company.logo"/>

            <t t-if="o.journal_id.invoice_report_id and o.journal_id.report_partner_id">
                <t t-set="logoimage" t-value="o.journal_id.report_partner_id.image"/>
            </t>

            <t t-call="custom_so.external_layout_sargantana_header"/>
            <t t-raw="0"/>
            <t t-call="custom_so.external_layout_sargantana_footer"/>
        </template>

        <template id="external_layout_sargantana_header">
            <div class="header">
                <div class="sarg-info vertical-text text-center">
                    <t t-set="division" t-value="o.journal_id.report_partner_id"/>
                    <span t-field="o.company_id.name"/>
                    <span t-field="o.company_id.vat"/>
                    <span t-field="o.company_id.street"/>
                    <span t-if="o.company_id.street2" t-field="o.company_id.street2"/>
                    <span t-field="o.company_id.zip"/>
                    <span t-field="o.company_id.city"/>
                    <span t-field="division.phone"/>
                    <span t-if="division.mobile" t-field="division.mobile"/>
                    <span t-field="division.email"/>
                    <span t-field="division.website"/>
                </div>

                <div class="row">
                    <div class="col-xs-5">
                        <img t-if="logoimage" t-att-src="'data:image/png;base64,%s' % logoimage"
                             style="max-height: 145px;"/>
                    </div>
                    <div class="col-xs-6 mt32">
                        <div>
                            <strong t-field="o.partner_id.name"/>
                        </div>
                        <span t-field="o.partner_id.vat"/>
                        <div t-field="o.partner_id.street"/>
                        <t t-if="o.partner_id.street2">
                             <div t-field="o.partner_id.street2"/>
                        </t>
                        <div>
                            <span t-field="o.partner_id.zip"/>
                            <span t-field="o.partner_id.city"/>
                            <!--span>(<span t-field="o.partner_id.state_id"/>)</span-->
                        </div>
                    </div>
                </div>

                <div class="mt32">
                    <table class="table table-condensed noborders">
                        <tbody>
                            <tr>
                                <td><strong>Date</strong></td>
                                <td>
                                    <span t-field="o.date_invoice"/>
                                </td>
                                <td class="text-right">
                                    <div>
                                        <span>Page</span>
                                        <span class="page"/>/<span class="topage"/>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <strong>
                                        <span t-if="o.type == 'out_invoice' and (o.state == 'open' or o.state == 'paid')">Invoice</span>
                                        <span t-if="o.type == 'out_invoice' and o.state == 'proforma2'">PRO-FORMA</span>
                                        <span t-if="o.type == 'out_invoice' and o.state == 'draft'">Draft Invoice</span>
                                        <span t-if="o.type == 'out_invoice' and o.state == 'cancel'">Cancelled Invoice</span>
                                        <span t-if="o.type == 'out_refund'">Refund</span>
                                    </strong>
                                </td>
                                <td colspan="2">
                                    <span t-field="o.number"/>
                                </td>
                            </tr>
                            <tr t-if="o.comment">
                                <td>
                                    <strong>Reference</strong>
                                </td>
                                <td colspan="2">
                                    <span t-field="o.comment"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </template>

        <template id="external_layout_sargantana_footer">
            <div class="footer">
            </div>
        </template>


        <template id="report_invoice_sargantana_document">
            <t t-call="custom_so.external_layout_sargantana">
                <div class="page">
                    <table class="table table-condensed">
                        <thead>
                            <tr class="border-orange-sarg">
                                <th>Code</th>
                                <th>Description</th>
                                <th>Quantity</th>
                                <th class="text-right">Price</th>
                                <th class="text-right" groups="sale.group_discount_per_so_line">Discount (%)</th>
                                <th class="text-right">Total</th>
                            </tr>
                        </thead>
                        <tbody class="invoice_tbody">
                            <tr t-foreach="o.invoice_line" t-as="l">
                                <td>
                                    <t t-if="l.product_id and l.product_id.default_code">
                                        <span t-field="l.product_id.default_code"/>
                                    </t>
                                </td>
                                <td>
                                    <span t-field="l.name"/>
                                </td>
                                <td>
                                    <span t-field="l.quantity"/>
                                    <span t-field="l.uos_id" groups="product.group_uom"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="l.price_unit"/>
                                </td>
                                <td class="text-right" groups="sale.group_discount_per_so_line">
                                    <span t-field="l.discount"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="l.price_subtotal"
                                          t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                </td>
                            </tr>
                        </tbody>
                    </table>


                    <div class="row mt8">
                         <div class="col-xs-12">
                             <table class="table table-condensed noborders">
                                <tr class="border-orange-sarg">
                                    <td>
                                        <strong>Total</strong>
                                    </td>
                                    <td class="text-right background-orange-sarg">
                                        <strong t-field="o.amount_untaxed"
                                              t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                    </td>
                                </tr>
                             </table>
                        </div>
                    </div>

                    <div class="row mt16">
                        <div class="col-xs-12">
                            <table class="table table-condensed noborders borders-orange-sarg">
                                <tr>
                                    <td>
                                        <strong>Total Without Taxes</strong>
                                    </td>
                                    <td class="text-right">
                                        <strong t-field="o.amount_untaxed"
                                              t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                    </td>
                                </tr>
                                <tr t-foreach="o.tax_line" t-as="t">
                                    <td>
                                        <strong t-field="t.name"/>
                                    </td>
                                    <td class="text-right">
                                        <strong t-field="t.amount"
                                              t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <strong>Invoice Total</strong>
                                    </td>
                                    <td class="text-right background-orange-sarg">
                                        <strong t-field="o.amount_total"
                                              t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-xs-6">
                            <table class="table table-condensed noborders">
                                <tbody>
                                    <tr>
                                        <td><strong>Payment</strong></td>
                                        <td>
                                            <span t-field="o.payment_mode_id"/>
                                        </td>
                                    </tr>
                                    <t t-set="banks" t-value="o.company_id.bank_ids.filtered(lambda x: x.footer)"/>
                                    <tr t-if="len(banks)!=0">
                                        <td><strong>IBAN</strong></td>
                                        <td>
                                            <t t-foreach="banks" t-as="b">
                                               <div t-field="b.acc_number"/>
                                            </t>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td><strong>Due date</strong></td>
                                        <td>
                                            <span t-field="o.date_due"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="col-xs-1 pull-right mt16">
                            <img src="custom_so/static/img/lasargantana_sargantana.png" style="max-height: 60px;"/>
                        </div>
                    </div>
                </div>
            </t>
        </template>

        <template id="report_invoice_sargantana">
            <style>
                .container {
                        margin-left: 15px;
                    }

                .vertical-text {
                    /* Safari */
                    -webkit-transform: rotate(-90deg);
                    /* Firefox */
                    -moz-transform: rotate(-90deg);
                    /* IE */
                    -ms-transform: rotate(-90deg);
                    /* Opera */
                    -o-transform: rotate(-90deg);
                    /* Standard */
                    transform: rotate(-90deg);
                    /* Internet Explorer */
                    filter: progid:DXImageTransform.Microsoft.BasicImage(rotation=3);

                    /* also accepts left, right, top, bottom coordinates; not required, but a good idea for styling */
                    -webkit-transform-origin: 0% 0%;
                    -moz-transform-origin: 0% 0%;
                    -ms-transform-origin: 0% 0%;
                    -o-transform-origin: 0% 0%;
                    transform-origin: 0% 0%;
                }

                .sarg-info {
                    position: absolute;
                    left: 0;
                    top: 1150px;
                    margin:0;
                    padding:0;

                    width: 1000px;
                    white-space: nowrap;
                    color: #FF6600;
                    font-size: small;
                    //background-color: green !important;
                }


                .border-orange-sarg {
                    border-top: 0px !important;
                    border-bottom: 2px solid #FF6600 !important;
                }
                .background-orange-sarg {
                    width:11% !important;
                    background-color: #FF6600 !important;
                }
                .noborders td {
                    ;border-collapse: collapse !important;
                    border: 0 !important;
                }
                .borders-orange-sarg {
                    border: 1px solid #FF6600 !important;
                }




            </style>

            <t t-call="report.html_container">
                <t t-foreach="doc_ids" t-as="doc_id">
                    <t t-raw="translate_doc(doc_id, doc_model, 'partner_id.lang', 'custom_so.report_invoice_sargantana_document')"/>
                </t>
            </t>
        </template>
    </data>
</openerp>

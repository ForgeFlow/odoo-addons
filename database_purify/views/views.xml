<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <!--  HEADER -->
        <!-- header Form view -->
        <record model="ir.ui.view" id="form_purify_purge">
            <field name="model">purify.purge</field>
            <field name="arch" type="xml">
                <form string="Purge">
                    <header>
                        <button string="Purge" name="button_purge" type="object"
                                class="oe_highlight" groups="base.group_user"/>
                         <button string="Geoip" name="button_geoip" type="object"
                                class="oe_highlight" groups="base.group_user"/>
                    </header>
                    <sheet>
                        <group name="main_field_group1">
                            <field widget="text" name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- header Tree view -->
        <record model="ir.ui.view" id="tree_purify_purge">
            <field name="model">purify.purge</field>
            <field name="arch" type="xml">
                <tree string="Purge">
                    <field name="name"/>
                </tree>
            </field>
        </record>


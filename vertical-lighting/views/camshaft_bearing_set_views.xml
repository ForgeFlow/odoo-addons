<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.actions.act_window" id="action_product_camshaft_bearing_set">
        <field name="name">Camshaft bearing set</field>
        <field name="res_model">sp.product.camshaft.bearing.set</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_product_camshaft_bearing_set" parent="sales_team.menu_sales" name="Camshaft bearing set" sequence="10"
          action="action_product_camshaft_bearing_set"/>

    <!-- Tree view -->
    <record model="ir.ui.view" id="view_product_camshaft_bearing_set_tree">
        <field name="name">Camshaft bearing set</field>
        <field name="model">sp.product.camshaft.bearing.set</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="shaft_diameter_max"/>
                <field name="housing_diameter_min"/>
                <field name="wall_thickness_max"/>
                <field name="length_max"/>
                <field name="length_max2"/>
            </tree>
        </field>
    </record>

    <!-- Form view -->
    <record model="ir.ui.view" id="view_product_camshaft_bearing_set_form">
        <field name="name">Camshaft bearing set</field>
        <field name="model">sp.product.camshaft.bearing.set</field>
        <field name="arch" type="xml">
            <form string="Camshaft bearing set">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                    <group>
                        <field name="shaft_diameter_max"/>
                        <field name="housing_diameter_min"/>
                        <field name="wall_thickness_max"/>
                        <field name="length_max"/>
                        <field name="length_max2"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>



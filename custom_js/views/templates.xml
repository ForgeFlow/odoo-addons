<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="product" inherit_id="website_sale.product" active="True"
              customize_show="True"
              name="JS product">

        <xpath expr="//div[@id='product_details']/h1"
               position="attributes">
            <attribute name="class">text-muted</attribute>
            <attribute name="style">font-size: x-large;</attribute>
        </xpath>

        <xpath expr="//div[@id='product_details']//p[@t-field='product.description_sale']"
               position="attributes">
            <attribute name="class">lead</attribute>
            <attribute name="style">color: black;</attribute>
        </xpath>
    </template>
</odoo>
